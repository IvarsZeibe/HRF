<UserControl x:Class="win.NumberMemoryTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:win"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" UIElement.MouseDown="OnGridClick">
        <TextBlock Text="Click to start number memory test" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TestDetails"></TextBlock>
        <TextBlock Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="NumberToRemember"></TextBlock>
        <TextBox Width="50px" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="NumberInput">test</TextBox>
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
    </Grid>
</UserControl>
